<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GSecurity"
        tools:targetApi="31">
        <activity
            android:name=".Itinerary.Activity_Itinerary"
            android:exported="true"
            android:screenOrientation="userPortrait"/>
        <activity
            android:name=".Dashboard.Activity_Administrator"
            android:exported="true"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Dashboard.Activity_Dashboard"
            android:exported="true"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Authentication.Activity_ForgotPassword"
            android:exported="true"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Authentication.Activity_CreateAccount"
            android:exported="true"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Authentication.Activity_Login"
            android:exported="true"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Activity_SplashScreen"
            android:exported="true"
            android:screenOrientation="userPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>