    <!-- Base application theme. -->
    <style name="Theme.GSecurity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryLight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantLight</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/material_black</item>
<!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->

        <item name="android:statusBarColor">@color/statusBarColorDark</item>
        <!--        <item name="android:colorBackground">@color/background_dark</item>-->
        <item name="android:textColor">@color/material_white</item>
        <item name="android:windowBackground">@color/material_black</item>
